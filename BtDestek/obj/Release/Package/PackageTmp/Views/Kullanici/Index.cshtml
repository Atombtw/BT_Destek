@model BtDestek.Models.Tbl_Destek

@{
    Layout = null;
}

@{ string kullanici = Session["kullanici"].ToString(); }

<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="https://i.hizliresim.com/ef24jl8.ico" type="image/x-icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BT Destek Talep Oluştur</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha512-L7MWcK7FNPcwNqnLdZq86lTHYLdQqZaz5YcAgE+5cnGmlw8JT03QB2+oxL100UeB6RlzZLUxCGSS4/++mNZdxw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini layout-fixed" style="margin: 0; font-size: 1rem; font-weight: 400; line-height: 1.5; color: #212529; text-align: left; background-color: #fff; font-family: Source Sans Pro;">
    <div style="position: relative; min-height: 100%;" class="wrapper">
        <!-- Main Sidebar Container -->
        <aside style="bottom: 0; float: none; height: 100vh; left: 0; position: fixed; top: 0; min-height: 100%; box-shadow: 0 14px 28px rgba(0,0,0,.25),0 10px 10px rgba(0,0,0,.22) !important; background-color: #343a40; overflow-y: hidden; z-index: 1038; transition: margin-left .3s ease-in-out,width .3s ease-in-out;" class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <a style="border-bottom: 1px solid #4b545c; color: rgba(255,255,255,.8); width: 250px; display: block; font-size: 1.25rem; line-height: 1.5; padding: 0.8125rem 0.5rem; transition: width .3s ease-in-out; white-space: nowrap; text-decoration: none; background-color: transparent;" class="brand-link">

                <span style="transition: margin-left .3s linear,opacity .3s ease,visibility .3s ease; font-weight: 300 !important; color: rgba(255,255,255,.8); font-size: 1.25rem; line-height: 1.5; white-space: nowrap; " class="brand-text font-weight-light">BT Destek</span>
            </a>

            <div style="position: relative; overflow: visible !important; -webkit-box-orient: vertical; -webkit-box-direction: normal; -webkit-box-pack: start; -webkit-box-align: start; height: calc(100% - 4rem); overflow-y: auto; padding-bottom: 0; padding-left: 0.5rem; padding-right: 0.5rem; padding-top: 0; " class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div style="border-bottom: 1px solid #4f5962; overflow: hidden; white-space: nowrap; position: relative; padding-bottom: 1rem !important; margin-bottom: 1rem !important; margin-top: 1rem !important; display: flex !important; " class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div style="display: inline-block; padding-left: 0.8rem;" class="image">

                    </div>
                    <div style="transition: margin-left .3s linear,opacity .3s ease,visibility .3s ease; display: inline-block; padding: 5px 5px 5px 10px; overflow: hidden; white-space: nowrap; " class="info">
                        <a style="color: #c2c7d0; display: block !important; text-decoration: none; background-color: transparent; " href="#" class="d-block">@Session["kullanici"]</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav style="margin-top: 0.5rem !important;" class="mt-2">
                    <ul style="position: relative; flex-direction: column !important; display: flex; flex-wrap: wrap; padding-left: 0; margin-bottom: 0; list-style: none; margin-top: 0; white-space: nowrap; overflow: hidden; " class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li style="margin-bottom: 0; box-sizing: border-box; " class="nav-item">
                            <a style="position: relative; white-space: nowrap; overflow: hidden; margin-bottom: 0.2rem; color: #c2c7d0; border-radius: 0.25rem; display: block; padding: 0.5rem 1rem; text-decoration: none; background-color: transparent; " href="/Kullanici/Index/" class="nav-link">
                                <i style="font-size: 1.1rem; margin-right: 0.2rem; text-align: center; width: 1.6rem; font-weight: 900; font-family: Font Awesome 5 Free !important; -webkit-font-smoothing: antialiased !important; display: inline-block !important; font-style: normal !important; font-variant: normal !important; text-rendering: auto !important; line-height: 1 !important;" class="nav-icon fas fa-th"></i>
                                <p style="display: inline-block !important; margin: 0 !important; transition: margin-left .3s linear,opacity .3s ease,visibility .3s ease; display: inline-block; margin: 0; margin-block-start: 1em; margin-block-end: 1em; margin-inline-start: 0px; margin-inline-end: 0px; ">
                                    Talep Oluşturun
                                </p>
                            </a>
                        </li>
                        <li style="margin-bottom: 0; box-sizing: border-box; " class="nav-item">
                            <a style="position: relative; white-space: nowrap; overflow: hidden; margin-bottom: 0.2rem; color: #c2c7d0; border-radius: 0.25rem; display: block; padding: 0.5rem 1rem; text-decoration: none; background-color: transparent; " href="/Kullanici/Taleplerim/" class="nav-link">
                                <i style="font-size: 1.1rem; margin-right: 0.2rem; text-align: center; width: 1.6rem; font-weight: 900;" class="nav-icon fas fa-calendar-alt"></i>
                                <p style="display: inline-block !important; margin: 0 !important; transition: margin-left .3s linear,opacity .3s ease,visibility .3s ease; display: inline-block; margin: 0; margin-block-start: 1em; margin-block-end: 1em; margin-inline-start: 0px; margin-inline-end: 0px; ">
                                    Aktif Talepleriniz
                                </p>
                            </a>
                        </li>
                        <li style="margin-bottom: 0; box-sizing: border-box;" class="nav-item">
                            <a style="position: relative; white-space: nowrap; overflow: hidden; margin-bottom: 0.2rem; color: #c2c7d0; border-radius: 0.25rem; display: block; padding: 0.5rem 1rem; text-decoration: none; background-color: transparent; " href="/Kullanici/Bildirim/" class="nav-link">
                                <i style="font-size: 1.1rem; margin-right: 0.2rem; text-align: center; width: 1.6rem; font-weight: 900;" class="nav-icon fas fa-envelope-open"></i>
                                <p style=" display: inline-block !important; margin: 0 !important; transition: margin-left .3s linear,opacity .3s ease,visibility .3s ease; display: inline-block; margin: 0; margin-block-start: 1em; margin-block-end: 1em; margin-inline-start: 0px; margin-inline-end: 0px; ">
                                    Bildirim
                                    <span style="transition: transform ease-in-out .3s,-webkit-transform ease-in-out .3s; position: absolute; right: 1rem; top: 0.7rem; color: #fff; background-color: #17a2b8; display: inline-block; padding: 0.25em 0.4em; font-size: 75%; font-weight: 700; line-height: 1; text-align: center; white-space: nowrap; vertical-align: baseline; border-radius: 0.25rem; " class="badge badge-info right">@Session["Bildirim"]</span>
                                </p>
                            </a>
                        </li>
                        <li style="margin-bottom: 0; box-sizing: border-box; " class="nav-item">
                            <a style="position: relative; white-space: nowrap; overflow: hidden; margin-bottom: 0.2rem; color: #c2c7d0; border-radius: 0.25rem; display: block; padding: 0.5rem 1rem; text-decoration: none; background-color: transparent; " href="/GirisYap/Login/" class="nav-link">
                                <i style="font-size: 1.1rem; margin-right: 0.2rem; text-align: center; width: 1.6rem; font-weight: 900;" class="nav-icon fas fa-sign-out-alt"></i>
                                <p style="display: inline-block !important; margin: 0 !important; transition: margin-left .3s linear,opacity .3s ease,visibility .3s ease; display: inline-block; margin: 0; margin-block-start: 1em; margin-block-end: 1em; margin-inline-start: 0px; margin-inline-end: 0px; ">
                                    Çıkış Yap
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 1170.77px; margin-left: 0; transition: margin-left .3s ease-in-out; ">

            <!-- Main content -->
            <section class="content" style="padding: 0; display: block; ">
                <div class="content" style="padding: 7rem 0;">
                    <div class="container" style="max-width: 840px; width: 100%; padding-right: 15px; padding-left: 15px; margin-right: auto; margin-left: auto;">
                        <div class="row align-items-stretch justify-content-center no-gutters" style="-webkit-box-align: stretch !important; align-items: stretch !important; -webkit-box-pack: center !important; justify-content: center !important; margin-right: 0; margin-left: 0; flex-wrap: wrap; display: flex; ">
                            <div class="col-md-7" style="padding-right: 0; padding-left: 0; flex: 0 0 58.33333%; max-width: 58.33333%; -webkit-box-flex: 0; position: relative; width: 100%; ">
                                <div class="form h-100 contact-wrap p-5" style="box-shadow: 0 0px 20px 0 rgba(0, 0, 0, 0.2); background: #fff; padding: 3rem !important; height: 100% !important; ">
                                    <h3 style="text-align: center !important; font-family: Roboto, sans-serif; font-size: 1.75rem; margin-bottom: 0.5rem; font-weight: 500; line-height: 1.2; margin-top: 0; color: #000; " class="text-center">
                                        Talep Gönder
                                    </h3>
                                    <form style="margin-bottom: 3rem !important;" class="mb-5" method="post" id="contactForm" name="contactForm">
                                        <div class="row" style="display: flex; flex-wrap: wrap; margin-right: -15px; margin-left: -15px; ">
                                            <div style="margin-bottom: 1rem !important; flex: 0 0 45%; max-width: 50%; position: relative; width: 100%; padding-right: 15px; padding-left: 15px; " class="col-md-6 form-group mb-3">
                                                <label for="" class="col-form-label" style="width: 100% !important; font-size: 14px; color: #b3b3b3; margin: 0 0 10px 0; display: inline-block; padding: 0;">Ad Soyad *</label>
                                                @Html.Label(kullanici, new { @style = "border-bottom: 1px solid #ccc; padding-top: 14px; padding-bottum: 14px; width: 100% !important; display: inline-block; margin-bottom: 0.5rem;", @name = "ID" })
                                                <input type="text" style="display:none;" value="@Session["ID"]" name="AdSoyad" />
                                            </div>
                                            @*<div style="margin-bottom: 1rem !important; flex: 0 0 44%; max-width: 50%; position: relative; width: 100%; padding-right: 15px; padding-left: 15px; " class="col-md-6 form-group mb-3">
                                                    <label for="" class="col-form-label" style="width: 100% !important; font-size: 14px; color: #b3b3b3; margin: 0 0 4px 0; display: inline-block; padding: 0;">Gönderen Birim *</label>
                                                    @Html.DropDownListFor(x => x.Tbl_Birim.ID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control", @style = "height: 45px; border-radius: 0; border: none; border-bottom: 1px solid #ccc; padding-left: 0; padding-right: 0; border-radius: 0; background: none; transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out, -webkit-box-shadow 0.15s ease-in-out; padding: 0.375rem 0.75rem; font-size: 1rem; font-weight: 400; line-height: 1.5; color: #495057; display: block; width: 100%; word-wrap: normal; text-transform: none; margin: 0; font-family: inherit; overflow: visible !important; padding:0; outline:0px;" })
                                                </div>*@
                                        </div>

                                        <div style="margin-bottom:5rem !important;" class="row mb-5">
                                            <div class="col-md-12 form-group mb-3">
                                                <label style="width: 100% !important; font-size: 14px; color: #b3b3b3; margin: 0 0 10px 0; display: inline-block; padding: 0;" for="message" class="col-form-label">Talep *</label>
                                                <textarea style="height: auto; resize: vertical; border-radius: 0; border: none; border-bottom: 1px solid #ccc; padding-left: 0; padding-right: 0; background: none; display: block; width: 100%; padding: 0.375rem 0.75rem; font-size: 1rem; font-weight: 400; line-height: 1.5; color: #495057; transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out, -webkit-box-shadow 0.15s ease-in-out; overflow: auto; margin: 0; outline: 0px; padding:0;" class="form-control" name="Aciklama" id="message" cols="30" rows="5" placeholder="Talebinizi açıklayınız..."></textarea>
                                                <p style="color:red; margin:0px; padding:0px; display:@Session["Talep"];">Lütfen Açıklama Alanını Boş Geçmeyiniz!!</p>
                                            </div>
                                        </div>
                                        <div style=" -webkit-box-pack: center !important; justify-content: center !important; display: flex; flex-wrap: wrap; margin-right: -15px; margin-left: -15px; box-sizing: border-box; " class="row justify-content-center">
                                            <div style="flex: 0 0 41.66667%; max-width: 41.66667%; -webkit-box-flex: 0; position: relative; width: 100%; padding-right: 15px; padding-left: 15px; box-sizing: border-box; " class="col-md-5 form-group text-center">
                                                <button style="cursor: pointer; box-shadow: 0 15px 30px 0 rgba(77, 128, 228, 0.2); border: none; font-size: 11px; letter-spacing: .2rem; text-transform: uppercase; border-radius: 30px !important; height: 45px; display: block; width: 100%; font-weight: 400; text-align: center; vertical-align: middle; user-select: none; padding: 0.375rem 0.75rem; line-height: 1.5; transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out, -webkit-box-shadow 0.15s ease-in-out; -webkit-appearance: button; overflow: visible; margin: 0; font-family: inherit; box-sizing: border-box; " class="btn btn-primary">Gönder</button>
                                            </div>
                                            <br />
                                            <p style="color:green; display:@Session["Talep2"];">Talebiniz Bilgi İşlem Birimine İletilmiştir.</p>
                                        </div>


                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer style="transition: margin-left .3s ease-in-out; margin-left: 270px; background: #fff; border-top: 1px solid #dee2e6; color: #869099; padding: 1rem; display: block; " class="main-footer">
            <strong style="font-weight: bolder;">Copyright &copy; 2023 <a>GENMOT</a>.</strong>
            All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
</body>
</html>
