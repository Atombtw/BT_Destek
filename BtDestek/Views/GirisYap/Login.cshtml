
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="shortcut icon" href="https://i.hizliresim.com/ef24jl8.ico" type="image/x-icon">
    <title>BT Destek Login</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Art Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates,
		Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha512-L7MWcK7FNPcwNqnLdZq86lTHYLdQqZaz5YcAgE+5cnGmlw8JT03QB2+oxL100UeB6RlzZLUxCGSS4/++mNZdxw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="font-family: 'Raleway', sans-serif; background: url(https://i.hizliresim.com/iu5f54y.jpg); background-size: cover !important; ">
    <h1 style="margin: 0; color: #ffffff; text-align: center; font-size: 50px; font-weight: 500; letter-spacing: 2px; padding: 50px 0;">Giriş Paneli</h1>
    <div style="background: rgba(0, 0, 0, 0.4117647058823529); max-width: 500px; margin: 0 auto; padding: 3em; border-radius: 10px; box-sizing: border-box;" class=" w3l-login-form">
        <h2 style="margin: 0; color: #fc3955; font-size: 25px; font-weight: 400; text-align: center; letter-spacing: 1px; padding-bottom: 30px;">Giriş Yap</h2>
        <form action="#" method="POST">
            <div style=" margin: 20px 0;" class=" w3l-form-group">
                <label style="display: block; text-transform: uppercase; font-size: 13px; color: #d2d2d2; letter-spacing: 2px; margin-bottom: 10px; font-style: italic;">Kullanıcı Adı:</label>
                <div style="padding:5px !important; display: flex; background-color: #ffffff;" class="group">
                    <i style="color: #fc3955; font-size: 20px; padding:10px;" class="fas fa-user"></i>
                    <input style="font-size: 14px; outline: none; width: 100%; border: none; box-sizing: border-box; background: transparent; color: #000;" type="text" name="mail" class="" placeholder="Kullanıcı" required="required" />
                </div>

            </div>
            <div style=" margin: 20px 0;" class=" w3l-form-group">
                <label style="display: block; text-transform: uppercase; font-size: 13px; color: #d2d2d2; letter-spacing: 2px; margin-bottom: 10px; font-style: italic;">Şifre:</label>
                <div style="display: flex; padding: 5px; background-color: #ffffff;" class="group">
                    <i style="color: #fc3955; font-size: 20px; padding:10px;" class="fas fa-unlock"></i>
                    <input style="font-size:14px; outline: 0; width: 100%; border: none; box-sizing: border-box; background: transparent; color: #000;" type="password" name="sifre" class="" placeholder="Şifre" required="required" />
                </div>
            </div>

            <button class="btn btn-success" style="Background: #fc3955; color:#fff; font-size: 13px; text-transform: uppercase; letter-spacing: 1px; border: none; padding: 12px 60px; cursor: pointer; width: 100%; border-radius: 6px;" type="submit">Giriş</button>
            <p style="color: #fc3955;">@Session["Bilgi"]</p>
        </form>
    </div>



    <footer style="padding: 4em 0; text-align: center;">
        <p style="font-size: 15px; letter-spacing: 2px; color: #fff; font-weight: 300;" class="copyright-agileinfo"> &copy; 2023 GENMOT. All Rights Reserved</p>
    </footer>
</body>
</html>